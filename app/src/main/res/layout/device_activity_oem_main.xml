<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- header view -->
    <RelativeLayout
        android:id="@+id/settings_title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3581F2">


        <LinearLayout
            android:id="@+id/settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backClick"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_back"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_codecSettings"
                android:layout_width="match_parent"
                android:background="#3581F2"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:onClick="deviceClick"
                android:text="去设置" />

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:background="#3581F2"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:onClick="deviceClick"
                android:text="应用全部设置" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:background="#3581F2"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:onClick="deviceClick"
                android:text="清除全部设置" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:textSize="13sp"
                android:text="已设置列表："
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_encodeInfo"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:layout_margin="3dp"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_decoderInfo"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:layout_margin="3dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_cameraInfo"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:layout_margin="3dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
